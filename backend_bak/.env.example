# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5002
NODE_ENV=production

# Database
MONGODB_URI=your_mongodb_connection_string_here

# JWT Secret (generate a strong random string)
JWT_SECRET=your_jwt_secret_here

# Frontend URL (for CORS) - Your Netlify URL
# Example: https://your-app-name.netlify.app
FRONTEND_URL=https://your-app-name.netlify.app

# Additional allowed origins (optional, comma-separated)
# Example: https://app1.netlify.app,https://app2.netlify.app
# ALLOWED_ORIGINS=https://app1.netlify.app,https://app2.netlify.app

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Google OAuth (if using Google Sign-In)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5002/auth/google/callback

# Google Maps API (if using location features)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Cloud Storage (if using GCS instead of Cloudinary)
GOOGLE_CLOUD_PROJECT_ID=your_project_id_here
GOOGLE_CLOUD_STORAGE_BUCKET=your_bucket_name_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Google Cloud Translation API (if using translation features)
GOOGLE_TRANSLATE_API_KEY=your_translate_api_key_here

# Google Cloud Speech-to-Text (if using voice messages)
GOOGLE_SPEECH_API_KEY=your_speech_api_key_here
